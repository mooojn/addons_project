<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="tasklyft_footer" inherit_id="website.layout">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="o_footer">
                <!-- Your custom footer HTML goes here -->
                <div class="container" style="margin-top: 20px;">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="/task_lyft/static/src/img/logo.jpg" width="95" height="40" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name"/>
                        </div>
                        <div class="col-md-4">
                            <h5>Contact</h5>
                            <p>Your contact info here.</p>
                        </div>
                        <div class="col-md-4">
                            <h5>Follow Us</h5>
                            <p>
                                <a href="#">Facebook</a> | <a href="#">Twitter</a> | <a href="#">Instagram</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
